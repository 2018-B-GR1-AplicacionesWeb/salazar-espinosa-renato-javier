<% const existeMensaje = typeof mensaje !== "undefined" %>
<% if(existeMensaje){ %>
<div class="alert alert-danger" role="alert">
    <p>Error en el Actualizacion</p>
    <% mensaje.forEach( (mensajeerror)=> { %>
    <span>
        <%= Object.values(mensajeerror.constraints) %></span>
    <br>
    <% }) %>

</div>
<% } %>
<% const existeMensajeok = typeof mensajeok !== "undefined" %>
<% if(existeMensajeok){ %>
<div class="alert alert-success" role="alert">
    <p>Aplicacion actualizada con Éxito</p>
    <span>
        <%= Object.values(mensajeok)%> </span>

</div>
<% } %>

<% const existeactualizar = typeof nombre !== "undefined" %>
<% if(existeactualizar){ %>
<div class="container">
    <form action="/aplicacion/ingresoaplicacion" method="POST">
        <div class="row">
            <div class="col-sm">
            </div>
            <div class="col-sm">

                <div class="form-group">
                    <div class="clearfix">
                        <h3>Actualizar Aplicacion</h3>
                        <div class="form-group">
                                <label for="aplicacion_id">ID</label>
                                <input type="number" name="aplicacion_id" class="form-control" id="aplicacion_id" placeholder="Ingrese peso en Gigas" value="<%= aplicacion_id%>">
                            </div>
                        <div class="form-group">
                            <label for="pesoenGigas">Peso en Gigas</label>
                            <input type="number" name="pesoenGigas" class="form-control" id="pesoenGigas" placeholder="Ingrese peso en Gigas" value="<%= pesoenGigas%>">
                        </div>
                        <label for="version">Versión</label>
                        <input type="text" class="form-control" name="version" id="version" 
                            placeholder="Ingrese versión">
                    </div>
                    <div class="form-group">
                        <label for="nombre">Nombre</label>
                        <input type="text" class="form-control" name="nombre" id="nombre"  value="<%= nombre%>">
                    </div>
                    <div class="form-group">
                        <label for="urldescarga">URL descarga</label>
                        <input type="text" class="form-control" name="urldescarga" id="urldescarga" placeholder="Ingrese URL" value="<%= urldescarga%>">
                    </div>
                    <div class="form-group">
                        <label for="fechalanzamiento">Fecha Lanzamiento</label>
                        <input type="date" class="form-control" name="fechalanzamiento" value="2019-02-01"
                            placeholder="Ingrese fecha de lanzamiento">
                    </div>
                    <div class="form-group">
                        <label for="costo">Costo </label>
                        <input type="text" class="form-control" name="costo" value="<%= urldescarga%>"
                            placeholder="Ingrese costo">
                    </div>
                    <div class="form-group">
                            <label for="so_id">Sistema Operativo ID</label>
                            <input type="number" class="form-control" name="so_id" id="so_id">
                        </div>
                    
                    <button type="submit" class="btn btn-primary">GUARDAR</button>
                </div>

            </div>
            <div class="col-sm">
            </div>
        </div>
        <form>
</div>
<% } %>