<% const existearray = typeof arrayEventos !== "undefined" %>
<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <table class="table">
                <thead class="bg-primary">
                    <tr>
                        <th style="width: 10%; background-color: #3F51B5 !important; color: white" scope="col">ID evento</th>
                        <th style="width: 40%; background-color: #3F51B5 !important; color: white" scope="col">Nombre evento</th>
                        <th style="width: 40%; background-color: #3F51B5 !important; color: white" scope="col">Fecha nacimiento</th>
                        <th style="width: 40%; background-color: #3F51B5 !important; color: white" scope="col">Latitud</th>
                        <th style="width: 40%; background-color: #3F51B5 !important; color: white" scope="col">Longitud</th>
                        <th style="width: 40%; background-color: #3F51B5 !important; color: white" scope="col">Accion</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(existearray){ %>
                    <% arrayEventos.forEach( (eventos)=> { %>
                    <tr>
                        <th scope="row">
                            <%= eventos.event_id %>
                        </th>
                        <td>
                            <%= eventos.nombre %>
                        </td>
                        <td>
                            <%= eventos.fecha %>
                        </td>
                        <td>
                            <%= eventos.latitud %>
                        </td>
                        <td>
                            <%= eventos.longitud %>
                        </td>
                        <td>
                            <a href="http://localhost:3000/eventosporhijo/geteventbyid?id=<%= eventos.event_id %>" class="btn btn-primary" role="button" aria-pressed="true">Ver</a>
                            <a href="http://localhost:3000/eventos/eliminareventos?id=<%= eventos.event_id %>" class="btn btn-danger" role="button" aria-pressed="true">Eliminar</a>
                        </td>

                    </tr>
                    <% }) %>
                    <% }%>
                </tbody>
            </table>
        </div>
    </div>
</div>