                        </div>
                        <label for="version">Versión</label>
                        <input type="number" class="form-control" name="version" id="version" aria-describedby="emailHelp"
                            placeholder="Ingrese versión">
                    </div>
                    <div class="form-group">
                        <label for="nombre">Nombre</label>
                        <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Ingrese nombre">
                    </div>
                    <div class="form-group">
                        <label for="url">URL descarga</label>
                        <input type="text" class="form-control" name="url" id="url" placeholder="Ingrese URL">
                    </div>
                    <div class="form-group">
                        <label for="url">Fecha Lanzamiento</label>
                        <input type="date" class="form-control" name="fechalanzamiento" value="2019-02-01"
