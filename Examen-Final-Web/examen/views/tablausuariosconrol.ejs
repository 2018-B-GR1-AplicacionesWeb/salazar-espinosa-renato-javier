<% const existearray = typeof arrayusuarios !== "undefined" %>

<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <table class="table">
                <thead class="bg-primary">
                    <tr>
                         <th style="width: 10%; background-color: #3F51B5 !important; color: white" scope="col">ID</th>
                        <th style="width: 10%; background-color: #3F51B5 !important; color: white" scope="col">Nombre</th>
                        <th style="width: 40%; background-color: #3F51B5 !important; color: white" scope="col">Correo</th>
                        <th style="width: 40%; background-color: #3F51B5 !important; color: white" scope="col">Fecha Nacimiento</th>
                        <th style="width: 40%; background-color: #3F51B5 !important; color: white" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(existearray){ %>
                    <% arrayusuarios.forEach( (user)=> { %>
                    <tr>
                        <td scope="row">
                            <%= user.usuario_id %>
                        </td>
                        <td scope="row">
                                <%= user.nombre %>
                            </td>
                        <td>
                            <%= user.correo %>
                        </td>
                        <td>
                            <%= user.fecha_nacimiento %>
                        </td>
                        <td>
                            <a href="http://localhost:3000/addroles" class="btn btn-primary" role="button" aria-pressed="true">Actualizar</a>
                            <a href="http://localhost:3000/usuario/eliminarusuario?id=<%= user.usuario_id %>" class="btn btn-danger" role="button" aria-pressed="true">Eliminar</a>
      
                        </td>

                    </tr>
                    <% }) %>
                    <% }%>
                </tbody>
            </table>
        </div>
    </div>
</div>