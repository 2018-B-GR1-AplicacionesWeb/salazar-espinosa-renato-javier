<% const existeMensaje = typeof mensaje !== "undefined" %>
<% if(existeMensaje){ %>
<div class="alert alert-danger" role="alert">
    <p>Error en el Ingreso</p>
    <% mensaje.forEach( (mensajeerror)=> { %>
    <span>
        <%= Object.values(mensajeerror.constraints) %></span>
    <br>
    <% }) %>

</div>
<% } %>
<% const existeMensajeok = typeof mensajeok !== "undefined" %>
<% if(existeMensajeok){ %>
<div class="alert alert-success" role="alert">
    <p>Sistema operativo registrado con Éxito</p>
    <span>
        <%= Object.values(mensajeok)%> </span>

</div>
<% } %>


<% const existeactualizar = typeof nombre !== "undefined" %>
<% if(existeactualizar){ %>
<div class="container">
    <form action="/sistemaoperativo/ingresoSO" method="POST">
        <div class="row">
            <div class="col-sm">
            </div>
            <div class="col-sm">
                <div class="form-group">
                    <div class="clearfix">
                        <h3>Actualizar sistema operativo</h3>
                        <div class="form-group">
                                <label for="so_id">ID</label>
                                <input type="text" name="so_id" class="form-control" id="so_id" placeholder="Ingrese nombre" value="<%= id%>">
                            </div>
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="text" name="nombre" class="form-control" id="nombre" placeholder="Ingrese nombre" value="<%= nombre%>">
                        </div>
                        <div class="form-group">
                                <label for="versionapi">Version api</label>
                                <input type="number" class="form-control" name="versionApi" id="versionApi" value="<%= versionApi%>"
                                    placeholder="Ingrese version de API">
        
                        </div>
                        <div class="form-group">
                                <label for="fechalanzamiento">Fecha lanzamiento</label>
                                <input type="date" class="form-control" name="fechalanzamiento" value="<%= fechalanzamiento%>">        
        
                        </div>
                        <div class="form-group">
                                <label for="pesoenGigas">Peso en gigas</label>
                                <input type="number" class="form-control" name="pesoenGigas"  value="<%= pesoenGigas%>">   
                        </div>
                        <div class="form-group">
                                <label for="Inputfechanacimiento">Instalado</label>
                                <input type="checkbox" name="instalado" values="<%= instalado%>"><br>
                        </div>
                        <div class="form-group">
                                <button type="submit" class="btn btn-primary">GUARDAR</button>
                        </div>
                    </div>
                    
                </div>
               
            </div>
            <div class="col-sm">
                </div>
            <form>
        </div>
        <% } %>